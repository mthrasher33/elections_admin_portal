
<div class="row">
		<div class ="col-xs-12">
			<div class="button group">
				<button id="view" class="active btn  btn-lg">View</button>
				<button id="create" class="btn  btn-lg">Create</button>
				<button id = "edit" class="btn  btn-lg">Edit</button>
			</div>
		</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<div id="candidatesCRUD">
			<% if (option === 'view') { %> 
        		<% include ../dashboard/candidatesView } %>
        		<% } %>
        		<% if (option === 'edit') { %> 
       				<% include ../dashboard/candidatesEdit } %>
       			<% } %>
       			<% if (option === 'create') { %> 
       				<% include ../dashboard/candidatesCreate } %>
       			<% } %>     		
		</div>
	</div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script>
	//set the correct button everytime we are routed to a page
	setActiveButton();

	function setActiveButton(){
		var active = <%= option %>
		$('button.btn.btn-lg').removeClass('active')
		$(active).addClass('active');

	}

	$('div.button.group button').click(function(){
		var url = $(location).attr('href');
 		var clicked = event.target.id;
       	var params = {
			menu: 'candidates',
			option: clicked
		}

		$('button.btn.btn-lg').removeClass('active')
		$(this).addClass('active');
		
		var str = jQuery.param(params);
			
		//if there are no parameters, add them
		if (url.indexOf('/') > 5){
		 window.history.pushState("", "", url.replace(/\?.*$/, "") + "?" + jQuery.param(params))
		} else {  //remove the existing params and add the new ones
		 window.history.pushState("", "", url.slice(0, url.indexOf('/')) + "?" +  jQuery.param(params))
		}

		$.get("/candidates" + clicked, function(data){	   
			//alert('getting data');    
	    	if(data){
				$('#candidatesCRUD').html(data);
	       	}
	  	});
	})
</script>